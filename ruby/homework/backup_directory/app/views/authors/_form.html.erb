<%= form_with model: author do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :bio %>
      <%= form.text_area :bio %>
    </div>
  
    <%= form.submit %>
  <% end %>
  
<%= link_to 'Back to Authors', authors_path %>