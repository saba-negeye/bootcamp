<h1>Edit Category</h1>

<%= form_with model: @category, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Save Changes" %>
  </div>
<% end %>

<%= link_to 'Back to Category', @category %>
