<%= form_with model: category, local: true do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
  
    <div>
      <%= form.submit "Create Category" %>
    </div>
  <% end %>
  
  <%= link_to 'Back to Categories', categories_path %>
  